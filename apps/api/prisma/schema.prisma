generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Node {
  id          String   @id @default(uuid())
  owner       String
  nodeType    String
  ipfsSpecCID String
  stake       BigInt
  reputation  Int
  lastHeartbeat BigInt
  slashed     Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Epoch {
  id          Int      @id @default(autoincrement())
  root        String
  totalAmount BigInt
  ipfsCID     String
  timestamp   BigInt
  allocations Json
}

model Job {
  id          String   @id @default(uuid())
  creator     String
  nodeId      String?
  taskCID     String
  payment     BigInt
  status      String
  createdAt   DateTime @default(now())
}

